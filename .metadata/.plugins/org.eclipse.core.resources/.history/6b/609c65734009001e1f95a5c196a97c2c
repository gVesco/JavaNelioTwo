package Exerc0801.application;

import java.util.Scanner;
import java.util.Locale;
import Exerc0801.entities.Rectangle;

public class Program {
    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        Rectangle rectangle = new Rectangle();
        Locale.setDefault(Locale.US);

        System.out.println("Digite os valores da largura e altura de um retângulo para calcular sua área, perímetro e diagonal");
        System.out.println("Enter the rectangle width and height: ");
        System.out.print("Width: ");
        rectangle.width = scn.nextDouble();
        System.out.print("Height: ");
        rectangle.height = scn.nextDouble();

        System.out.print(rectangle);
        
        scn.close();
    }
}
